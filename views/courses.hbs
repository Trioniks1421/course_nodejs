<h1>Курсы </h1>
{{#if courses.length}}
{{#each courses}}
<div class="row">
    <div class="col s6 offset-3">
      <div class="card">
        <div class="card-image">
          <img src={{img}} >
        </div>
        <div class="card-content">
            <span class="card-title">{{title}}</span>
            <p class="price">{{price}}</p>
        </div>
        <div class="card-action">
          <a href="/{{id}}">Открыть курс</a>
          <a href="/:id/edit">Редактировать курс</a>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
{{else}}
<p>Курсов нету</p>
{{/if}}
