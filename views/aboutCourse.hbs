{{#with course}}
<div class="row">
    <div class="col s6 offset-3">
      <div class="card">
        <div class="card-image">
          <img src={{img}} >
        </div>
        <div class="card-content">
            <span class="card-title">{{title}}</span>
            <p class="price">{{price}}</p>
        </div>
        <class class="card-action">
            <a href="/courses">Вернутся к курсам</a>
        </class>
      </div>
    </div>
  </div>
  {{/with}}